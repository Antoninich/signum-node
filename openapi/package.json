{
  "name": "signum-node-openapi",
  "version": "1.0.0",
  "description": "The OpenAPI description of the Signum Node API",
  "private": "true",
  "scripts": {
    "build": "swagger-cli bundle signum-api.json --outfile ../html/api-doc/signum-api.json",
    "dev": "npm-watch"
  },
  "watch": {
    "build": {
      "patterns": ["paths", "schemas", "responses", "./signum-api.json" ],
      "extensions": "json",
      "ignore": [
        "package.json",
        "package-lock.json"
      ]
    }
  },
  "keywords": [
    "oas",
    "openapi",
    "swagger",
    "documentation"
  ],
  "author": "ohager",
  "license": "MIT",
  "devDependencies": {
    "npm-watch": "^0.11.0",
    "swagger-cli": "^4.0.4"
  }
}
